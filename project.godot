; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Storm-Engine-Core"
config/features=PackedStringArray("4.5", "GL Compatibility")
config/icon="res://icon.svg"

[autoload]

GlobalAdapterRegistry="*res://core/regristry/adapter_registry.gd"
GlobalBusManager="*res://core/managers/bus_manager.gd"
InputPoller="*res://core/input/input_poller.gd"

[editor_plugins]

enabled=PackedStringArray("res://addons/gut/plugin.cfg")

[plugins]

ai_assistant_hub/llm_api="ollamaturbo_api"
ai_assistant_hub/preferences/thinking_target=0
ai_assistant_hub/preferences/skip_greeting=false
ai_assistant_hub/preferences/always_scroll_to_bottom=false

[rendering]

renderer/rendering_method="gl_compatibility"
renderer/rendering_method.mobile="gl_compatibility"
